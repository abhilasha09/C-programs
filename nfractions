#include<stdio.h>
struct fraction
{
	int num;
	int den;
};
void input(int n,struct fraction a[])
{
	
	for(int i=0;i<n;i++)
	{
	printf("Enter the value of numerator%d",i+1);
	scanf("%d",&a[i].num);
	printf("Enter the value of denominator%d",i+1);
	scanf("%d",&a[i].den);
	}
	
}
int compute(int n,struct fraction a[],int *w)
{
int i;int s;int p=1;int sum;sum=0;
for(i=0;i<n;i++)
{
s=a[i].den;
p=p*s;
}
*w=p;
for(i=0;i<n;i++)
{
int o,m;
o=a[i].num;
m=a[i].den;
sum=sum+(p*o)/m;
}
return sum;
}
void output(int p,int o)
{
printf("The sum of the fractions is %d/%d",o,p);
}
int main()
{
int n;
printf("Enter the no of fractions");
scanf("%d",&n);int p;int o;
struct fraction a[n];
input(n,a);
o=compute(n,a,&p);
output(p,o);
return 0;
}
