#include<stdio.h>
struct fraction
{
	int num;
	int den;
};
struct fraction a[100];
int input(int n,struct fraction *a[])
{
	for(int i=0;i<n;i++)
	{
	printf("Enter the value of numerator%d",i+1);
	scanf("%d",&a[i]->num);
	printf("Enter the value of denominator%d",i+1);
	scanf("%d",&a[i]->den);
	}
}
void sumoffrac(int n,struct fraction a[],struct fraction *sum[n])
{
	struct fraction f1[n];
	int num1,num2;int den1,den2;
	num2=a[0].num;
	den2=a[0].den;
	for(int i=1;i<n;i++)
	{
	den1=f1[i].den;
	num1=f1[i].num;
	sum[i].num=(num2)*(den1)+(den2)*(num1);
	sum[i].den=(den2)*(den1);
	num2=sum[i].num;
	den2=sum[i].den;
	}
	
}
int output(struct fraction sum[],int n)
{
	printf("%d/%d",sum[n-1].num,sum[n-1].den);
}
void main()
{	
	int n;
	printf("Enter the number of fractions");
	scanf("%d",&n);
	struct fraction sum[n];
	struct fraction f[n];
	input(n,&f);
	sumoffrac(n,f,&sum);
	output(sum,n);
}
