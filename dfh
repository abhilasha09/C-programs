#include<stdio.h>
double input(double n,double a[],double x)
{
int i;
	for(i=0;i<(int)n;i++)
	{
	double s;s=a[i];
	printf("Enter the coefficient of x^%f",n);
	scanf("%f",&s);
	}

}
double compute(double a[],double n,double x)
{
double res;int i;
for(i=0;i<n;i++)
{
double o;o=(double)i;
double s;s=a[i];res+=(s)*(pow(x,o));
}
return res;
}
int output(int res)
{
printf("The Value of the polynomial is %f",res);
return 0;
}
void main()
{
double n;double x;
printf("Enter the degree of the polynomial");
scanf("%f",&n);
printf("Enter the value of x");
scanf("%f",x);
double a[n];double i;
input(n,a,x);
i=compute(a,n,x);
output(i);
}
